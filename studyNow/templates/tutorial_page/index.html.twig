{% extends 'base.html.twig' %}

{% block title %}Hello TutorialPageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

            <div class="rounded-lg shadow-lg bg-white card w-100">
                <a href="#!">
                    <img class="rounded-t-lg" src="https://mdbootstrap.com/img/new/standard/nature/184.jpg" alt=""/>
                </a>
                <div class="p-6">
                    <h5 class="text-gray-900 text-xl font-medium mb-2">{{ tutorial.name }}</h5>
                    <p class="text-gray-700 text-base mb-4">
                        {{ tutorial.description }}
                    <div class="flex space-x-2 justify-center">
                        <span class="text-xs inline-block py-1 px-2.5 leading-none text-center whitespace-nowrap align-baseline font-bold bg-blue-600 text-white rounded-full">{{ tutorial.lecategory}}  / {{ tutorial.ledifficulty }}</span>
                    </div>
                    {%for steps in  tutorial.steps  %}
                    {{ steps.name }}
                    {% endfor %}
                </div>
            </div>
{% endblock %}

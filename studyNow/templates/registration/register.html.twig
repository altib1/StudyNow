            </div>
            <h3 class="text-2xl font-bold text-center">Veuillez cr√©er votre compte</h3>

            <form action="" method="post">
    {{ form_start(registrationForm,{'attr': { 'class': 'form-group mx-5 login-custom'}} ) }}
            <div class="mt-4">

        {{ form_row(registrationForm.email, {'attr': {'class': 'block w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600'}}) }}
            </div>
           <div class="mt-4">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            'attr': {'class': 'w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600'}
        }) }}
           </div>
            <input type="hidden" name="_target_path" value="/"/>
        {{ form_row(registrationForm.agreeTerms, {'attr': { 'class': 'form-check-input ml-1'}}) }}

        <button type="submit" class="px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900">Register</button>
        {{ form_end(registrationForm) }}
            </form>
        </div>
    </div>


